/**
默认边框
color = 边框颜色
location = 位置
line = 边框粗细
*/
borderFun($color, $location = '', $line = 1px) {
  border{$location ? '-' + $location : ''}: $line solid $color
}

/**
边框1px
*/
borderAfter($location = '') {
  position: relative
  &:after {
    display: block
    content: ''
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    pointer-events: none
    right: -100%
    bottom: -100%
    transform: scale(0.5)
    if($location) {
      borderFun($border-color, $location)
    }
  }
}

tapColor($color, $opacity = .9) {
  background-color: $color
  &:active {
    if ($color == 'transparent') {
      background-color: #f5f5f5
    } else {
      background-color: $color * $opacity
    }
  }
}

bg($background, $color = #fff) {
  background-color: $background
  if ($background == #ffffff) {
    color: $font-color
  } else {
    color: $color
  }
}

size($size) {
  ($size / 10)rem
}