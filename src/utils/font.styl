// 遍历出文字颜色
for row in ($font-color-vars) {
  .{$prefix}color-{row} {
    color: lookup('$color-' + row)
  }
}
// 文字大小
for size in range($font-size-min, $font-size-max) {
  .{$prefix}font-{size} {
    font-size: ((((size * 2) - 2) + 10) / 10rem)
  }  
}

// H标签
for size in range(1, 8) {
  h{size} {
    font-size: ((($font-size-max - size) * 2 + 10) / 10rem)
    line-height: 1
    if (size == 7 || size == 8) {
      display: block
    }
  }  
}

// 默认颜色
.{$prefix}color-default {
  color: $font-color
}

// 文字方向
.{$prefix}text-left {
  text-align: left
}
.{$prefix}text-right {
  text-align: right
}
.{$prefix}text-center {
  text-align: center
}