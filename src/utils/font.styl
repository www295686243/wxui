// 遍历出文字颜色
for row in ($font-color-vars) {
  .{$prefix}color-{row} {
    color: lookup('$color-' + row)
  }
}
// 文字大小
for item in range($font-size-min, $font-size-max) {
  .{$prefix}font-{item} {
    font-size: size(((item * 2) - 2) + 10)
  }  
}

// H标签
for item in range(1, 8) {
  h{item} {
    font-size: size(($font-size-max - item) * 2 + 10)
    line-height: 1
    // h7与h8为自定义标签，与H标签统一为块状元素
    if (item == 7 || item == 8) {
      display: block
    }
  }  
}

// 默认颜色
.{$prefix}color-default {
  color: $font-color
}

// 文字方向
.{$prefix}text-left {
  text-align: left
}
.{$prefix}text-right {
  text-align: right
}
.{$prefix}text-center {
  text-align: center
}