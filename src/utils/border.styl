.{$prefix}border,
.{$prefix}border-tb,
.{$prefix}border-lr,
.{$prefix}border-t,
.{$prefix}border-r,
.{$prefix}border-b,
.{$prefix}border-l
{
  borderAfter()
}

.{$prefix}border:after {
  borderFun($border-color)
}

.{$prefix}border-t:after {
  borderFun($border-color, 'top')
}

.{$prefix}border-r:after {
  borderFun($border-color, 'right')
}

.{$prefix}border-b:after {
  borderFun($border-color, 'bottom')
}

.{$prefix}border-l:after {
  borderFun($border-color, 'left')
}

.{$prefix}border-tb:after {
  borderFun($border-color, 'top')
  borderFun($border-color, 'bottom')
}

.{$prefix}border-lr:after {
  borderFun($border-color, 'left')
  borderFun($border-color, 'right')
}