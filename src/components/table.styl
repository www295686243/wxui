.{$prefix}table {
  border-collapse: collapse
  border-spacing: 0
  tr {
    td, th {
      padding: size(10)
    }
    th {
      background: #F5F7FA
    }
  }
  &.full {
    width: 100%  
  }
  &.striped {
    & > tbody > tr:nth-child(odd) > td {
      background: #F5F7FA
    }
  }
  &.nowrap {
    white-space: nowrap
  }
  &.border {
    border:1px solid #ccc;
    tr {
      th{
        border:1px solid #ccc;
      }
      td{
        border:1px solid #ccc;
      }
    }
  }
  &.fixed{
    table-layout:fixed;
  }
}