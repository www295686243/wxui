// form需要配合list
.{$prefix}form {
  width: 100%
  li {
    display: flex
    align-items: stretch
    & > div {
      display: flex
      & > div {
        width: 100%  
      }
    }
    .textarea {
      display: block  
    }
    .label {
      white-space: nowrap
      text-align: right
      font-size: fontSize(14)
      spacePadding(2, 'tb')
      spacePadding(1, 'r')
      spacePadding(2, 'l')
      line-height: 1
    }
    .action {
      position: relative
      button {
        border: 0
        border-radius: 0
        height: 100%
      }
      span {
        spacePadding(2, 'lr')
      }
    }
    .label,
    .action,
    .input {
      align-items: center
    }
  }
  // ul添加radius 所有li都带圆角
  for item in range($radius-size-min, $radius-size-max) {
    &.radius-{item} {
      & > li {
        .action {
          button {
            border-top-right-radius: size(1 * item * $radius-size-multiple)
            border-bottom-right-radius: size(1 * item * $radius-size-multiple)
          }  
        }
      }
    }
  }
}