// form需要配合list
.{$prefix}form {
  width: 100%
  li {
    display: flex
    align-items: center
  }
  .label {
    white-space: nowrap
    text-align: right
    font-size: 1.4rem
    padding: 1rem .5rem 1rem 1rem
  }
  .action {
    button {
      border: 0
      border-radius: 0
      padding: 1.2rem
    }
    span {
      padding: 0 1rem
    }
  }
}