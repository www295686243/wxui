// form需要配合list
.{$prefix}form {
  width: 100%
  li {
    display: flex
    align-items: stretch
    & > div {
      display: flex
      & > div {
        width: 100%  
      }
    }
    .textarea {
      display: block  
    }
  }
  .label {
    white-space: nowrap
    text-align: right
    font-size: size(14)
    padding: size(10) size(5) size(10) size(10)
  }
  .action {
    button {
      border: 0
      border-radius: 0
      height: 100%
    }
    span {
      padding: 0 size(10)
    }
  }
  .label,
  .action,
  .input {
    align-items: center
  }
}