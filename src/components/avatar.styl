.{$prefix}avatar {
  position: relative
  font-size: 0
  & > img {
    width: 100%
    height: 100%
    border-radius: 100%
  }
  &.square {
    & > img {
      border-radius: 0  
    }
  }
}

for item in range($avatar-size-min, $avatar-size-max) {
  .{$prefix}avatar-{item} {
    width: size((item - 1) * $avatar-size-multiple + 20)
    height: size((item - 1) * $avatar-size-multiple + 20)
    @extend .{$prefix}avatar
  }
}